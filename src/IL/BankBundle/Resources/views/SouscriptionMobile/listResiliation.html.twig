{% extends "ILBankBundle::layout.html.twig" %}
{% block title %}Liste des souscription {% endblock %}

{% block breadcrumb %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Souscription Mobile</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="{{ path('il_bank_homepage') }}">Tableau de Bord</a></li>
                        <li><a href="{{ path('il_bank_souscription_mobile_list') }}">Souscription Mobile</a></li>
                        <li class="active">Liste des resiliations</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Liste des resiliations</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-sm table-hover  mb-0">
                            <thead class="thead-light">
                            <tr>
                                <th class="text-center">
                                    No
                                </th>
                                <th> Op√©rateur Mobile</th>

                                <th> No de carte</th>
                                <th> Nom sur la carte</th>
                                <th> No de telephone</th>
                                <th>Statut Carte</th>
                                <th>  Statut Linkage</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for souscription in souscriptions %}
                                <tr>
                                    <td>{{ souscription.id }}</td>
                                    <td>{{ souscription.operateur }}</td>
                                    <td>{{ souscription.numeroCarte | slice(0, 4)  }} **** **** *{{ souscription.numeroCarte | slice(0, 3)  }}</td>
                                    <td>{{ souscription.nomCarte }}</td>
                                    <td>{{ souscription.numeroTelephone }}</td>
                                    <td>
                                        {% if souscription.statutCarte == 'Activated' %}
                                            <span class="btn btn-outline-success btn-sm">{{ souscription.StatutCarte }}</span>
                                        {% elseif souscription.statutCarte == 'Pending' %}
                                            <span  class="btn btn-outline-warning btn-sm">{{ souscription.StatutCarte }}</span>

                                        {% endif %}

                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-outline-danger btn-sm">{{ souscription.StatutLiaison }}</button>

                                    </td>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}